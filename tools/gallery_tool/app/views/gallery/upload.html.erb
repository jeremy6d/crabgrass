<% unless request.xhr? -%>
  <%= gallery_navigation :show %>
<% end -%>

<h2><%=I18n.t(:upload_images_link)%> |     <%= link_to_remote(I18n.t(:upload_a_zip_file_link), :url => page_url(@page, :action => 'upload_zip'))%></h2>
<% form_tag page_url(@page, :action => 'upload', 'X-Progress-ID' => @upload_id), :method => :post, :multipart => true do -%>
  <%= hidden_field_tag 'X-Progress-ID', @upload_id %>
  <table>
    <%= render :partial => 'upload' -%>
  </table>
  <%= spinner('upload') %>
  <%= submit_tag I18n.t(:upload), :onClick => "$('upload_spinner').show();" %>
  <%= button_to_function I18n.t(:cancel), "new Effect.SlideUp($('target_for_upload'));" %>
<% end -%>

<%= javascript_tag "if($('target_for_upload')) $('target_for_upload').show();" %>
